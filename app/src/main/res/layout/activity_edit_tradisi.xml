<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".EditTradisi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Nama Tradisi"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/namaTradisi"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Masukkan nama tradisi"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Deskripsi"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/deskripsiPura"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="left"
                    android:hint="Masukkan deskripsi pura"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Jenis Odalan"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanJenis"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Jenis"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtSaptawara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Saptawara"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanSaptawara"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Saptawra"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtPancawara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pancawara"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanPancawara"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Pancawara"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtBulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Bulan Odalan"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanBulan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Bulan"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtWuku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Wuku"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanWuku"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Wuku"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtSasih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Sasih"
                    android:textColor="@color/black_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/odalanSasih"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Odalan Sasih"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/jenisOdalanSasih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Odalan Berdasakan Purnama/Tilem"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textJenisBulan"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/custom_input"
                                android:drawableEnd="@drawable/ic_arrow_down"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Pilih Bulan Odalan"
                                android:textSize="16sp" />
                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Sasih"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textJenisSasih"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/custom_input"
                                android:drawableEnd="@drawable/ic_arrow_down"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Pilih Sasih"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/jenisOdalanPawukon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Wuku"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textWuku"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/custom_input"
                                android:drawableEnd="@drawable/ic_arrow_down"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Pilih Wuku"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Saptawara"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textSaptawara"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/custom_input"
                                android:drawableEnd="@drawable/ic_arrow_down"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Pilih Saptawara"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Pancawara"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/textPancawara"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/custom_input"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Pancawara"
                            android:paddingStart="12dp"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBatal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_stroke_red"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textColor="@color/red" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>